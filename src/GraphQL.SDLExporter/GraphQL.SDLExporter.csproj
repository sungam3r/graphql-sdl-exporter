<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp3.1;net5;net6;net7</TargetFrameworks>
    <PackageTags>GraphQL;Introspection;SDL</PackageTags>
    <Title>.NET Core Global Tool for generating SDL from url or executable file</Title>
    <Description>$(Title)</Description>
    <PackAsTool>true</PackAsTool>
    <PackageId>dotnet-sdlexport</PackageId>
    <ToolCommandName>sdlexport</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="GraphQL.IntrospectionModel" Version="0.0.17" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
